@{
	ViewData["Title"] = "Login";
}
<div class="container card card-body mt-5 w-25">
        <h2 class="text-muted text-center card-header py-4 ">Login</h2>
    <form class="card-body">
        <div class="form-outline my-4">
            <input type="email" placeholder="Enter Your Email" class="form-control" />
        </div>
        <div class="form-outline mb-4">
            <input type="password" placeholder="Enter Your Password" class="form-control border-bottom" />
        </div>
        <div class="text-center">
        <button type="button" class="btn btn-dark btn-block  px-5">Sign in</button>
        </div>
        <hr />
        <p class="text-center">Don't have an Account? <a asp-controller="Auth" asp-action="Register" class="">Sign Up!</a></p>
    </form>
    </div>
</div>