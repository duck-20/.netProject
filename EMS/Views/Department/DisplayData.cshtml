@model EMS.Models.SetUpDepartmentViewModel
@{
    ViewData["Title"] = "Department List";
    int count = 0;
}
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Department Table</h1>
    <p class="mb-4">
        List of our Department with their Details.
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">List of Department</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>SNO.</th>
                            <th>Department ID</th>
                            <th>Department Name</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var data in Model.DeptList)
                        {
                            <tr>
                                <td>@(count += 1)</td>
                                <td>@data.DepartmentId</td>
                                <td>@data.DepartmentName</td>
                                <td><a href="/Department/Details?departmentId=@data.DepartmentId">View Details...</a></td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- End of Main Content -->